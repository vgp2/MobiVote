<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        android:background="@color/participant"
        android:contentDescription="@string/description_participant_avatar"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_person" >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:divider="?android:dividerVertical"
        android:dividerPadding="8dp"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:layout_weight="1"
        android:dividerPadding="0dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textview_participant_identification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:text="@string/content"
            android:textSize="16sp" >
        </TextView>
        <TextView
            android:id="@+id/textview_participant_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/content"
            android:textSize="11sp"
            android:singleLine="true">
        </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_accepted_img"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/description_accepted"
            android:src="@drawable/ic_action_accept_dark"
            android:visibility="gone"
            android:layout_marginTop="3dp" />

        <ProgressBar
            android:id="@+id/progress_bar_waitforaccept"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:layout_marginTop="3dp" />

        <CheckBox
            android:id="@+id/button_validate_review"
            android:layout_width="42dp"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_vertical|center_horizontal"
    		android:layout_marginLeft="6dp"
    		android:layout_marginTop = "2dp" />
    </LinearLayout>

</LinearLayout>
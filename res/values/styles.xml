<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>
    
    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_votebartheme</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal_votebartheme</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    
    <style name="BottomBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selectable_background_bottombar</item>
    </style>
    
    <style name="MainButtons">
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selectable_background_mainbuttons</item>
    </style>
    
    <style name="BorderLessButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selectable_background_votebartheme</item>
    </style>
    
    <style name="AcceptReviewButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selectable_background_mainbuttons</item>
    </style>
    
    <style name="Dialog" parent="android:Theme.Holo.Dialog">
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
	    <item name="android:tint">@color/theme_color</item>
	    <item name="android:textColor">@color/theme_color</item>
	</style>

	<style name="DialogTitleStyle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
		<item name="android:textColor">@color/theme_color</item>
	</style>

</resources>